{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noLib": false,
    "paths": {
      "@rkta/*": ["packages/*/src"]
    },
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["packages/**/src"],
  "exclude": ["node_modules", "packages/**/lib", "**/*.spec.ts"],
  "types": ["typePatches"],
  "references": [{ "path": "packages/ui" }, { "path": "packages/entypo" }]
}
