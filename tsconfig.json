{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noLib": false,
    "paths": {
      "@rkta/context": ["src/packages/context"],
      "@rkta/form": ["src/packages/form"],
      "@rkta/ui": ["src/packages/ui"],
      "@rkta/entypo": ["src/packages/entypo"],
      "@rkta/hooks": ["src/packages/hooks"]
    },
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES3"
  },
  "files": [],
  "exclude": ["node_modules", "src/packages/**/lib", "src/gatsby-theme-docz", "**/*.spec.ts"],
  "types": ["typePatches"],
  "references": [
    { "path": "src/packages/context" },
    { "path": "src/packages/form" },
    { "path": "src/packages/ui" },
    { "path": "src/packages/entypo" },
    { "path": "src/packages/hooks" }
  ]
}
